{
    "compilerOptions": {
        "outDir": "dist", // Biên dịch vào thư mục "js"
        "target": "ES6", // cho phép biên dịch code TypeScrip sang kiểu ES6
        "module": "commonjs", // CommonJS là tiêu chuẩn đc sử dụng trong node.js để làm việc với các module 
        "removeComments": true, // Xóa comments khi biên dịch sang file js
        "esModuleInterop": true,  // Dùng được từ khóa import thay cho requyre 
        
    }
}